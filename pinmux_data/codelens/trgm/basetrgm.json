{
    "vars": {
        "filterRegister": "HPM_TRGM${trgmIndex}_FILTER_SRC_${input}",
        "outputRegister": "HPM_TRGM${trgmIndex}_OUTPUT_SRC_${output}",
        "outputInput": "HPM_TRGM${trgmIndex}_INPUT_SRC_${input}",
        "dmaOut": "TRGM_DMACFG_${out}",
        "dmaSrc": "HPM_TRGM${trgmIndex}_DMA_SRC_${source}"
    },
    "enums": {
        "mode": {
            "0": "trgm_filter_mode_bypass",
            "1": "trgm_filter_mode_rapid_change",
            "2": "trgm_filter_mode_delay",
            "3": "trgm_filter_mode_stable_low",
            "4": "trgm_filter_mode_stable_high"
        },
        "outputType": {
            "0": "trgm_output_same_as_input",
            "1": "trgm_output_pulse_at_input_falling_edge",
            "2": "trgm_output_pulse_at_input_rising_edge",
            "3": "trgm_output_pulse_at_input_both_edge"
        }
    },
    "struct": {
        "trgm_input_filter_t": {
            "invert" : "${invert}",
            "sync": "${sync}",
            "filter_length": "${length}",
            "mode": "{{mode}}"
        },
        "trgm_output_t": {
            "invert": "${invert}",
            "type": "{{outputType}}",
            "input": "{{outputInput}}"
        }
    },
    "functions": {
        "direction": {
            "0": "trgm_disable_io_output({{trgmType}}, 1 << ${mask})",
            "1": "trgm_enable_io_output({{trgmType}}, 1 << ${mask})"
        },
        "filter": "trgm_input_filter_config({{trgmType}}, {{filterRegister}}, &{{trgm_input_filter_t}})",
        "io": "trgm_output_config({{trgmType}}, {{outputRegister}}, &{{trgm_output_t}})",
        "dma": "trgm_dma_request_config({{trgmType}}, {{dmaOut}}, {{dmaSrc}})"
    }
}